.content_tab_content_buyerComment {
  padding: 50rpx 0;
}

.buyerComment_item {
  margin-bottom: 60rpx;
  border-bottom: 1rpx dotted #e5e5e5;
}

.buyerComment_item_avatar {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 30px;
  border-radius: 8rpx;
  margin-left: 4rpx;
}

.buyerComment_item_right {
  margin-left: 80rpx;
}

.buyerComment_item_name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 16rpx;
}

.buyerComment_item_name_title {
  font-size: 26rpx;
  color: #333;
  margin-right: 20rpx;
}

.buyerComment_item_name_viplogo {
  width:100rpx;
  height:30rpx;
  position:relative;
  left:-25rpx;
}

.buyerComment_item_name_vip {
  font-size: 24rpx;
  color: #f6d096;
  position: relative;
  z-index: 1;
  bottom:6rpx;
  left:12rpx;
}

.buyerComment_item_date {
  font-size: 22rpx;
  color: #666;
  padding: 24rpx 0 30rpx;
}

.buyerComment_item_comment_content {
  font-size: 25rpx;
  color: #333;
  padding-bottom: 20rpx;
}

.buyerComment_item_comment_imgs {
  padding: 0 0 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.buyerComment_item_comment_img {
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(0,0,0,.1);
  margin: 0 20rpx 20rpx 0;
}

.buyerComment_item_comment_img.big {
  width: 320rpx;
  height: 200rpx;
}

.buyerComment_item_comment_img.middle {
  width: 280rpx;
  height: 180rpx;
}

.buyerComment_item_comment_img.small {
  width: 182rpx;
  height: 160rpx;
}

.ml-0 {
  margin-left: 0;
}

.pl-4 {
  margin-left: 16rpx;
}
.arrow-icon {
  color: #ccc;
}

.buyerComment_item_name.one {
  height: auto;
  line-height: auto;
  word-break: break-all;
}