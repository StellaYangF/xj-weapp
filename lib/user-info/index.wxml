<van-cell-group>
  <van-field
    value=""
    label="联系人信息"
    disabled
    input-class='van-info title'
  />
  <van-field
    value="{{ username }}"
    label="姓名"
    placeholder="请输入用户名"
    bind:change='handleUsername'
    required
    input-class='van-info'
  />
  <van-field
    value="{{ phone }}"
    label="手机号"
    placeholder="请输入手机号"
    error='{{false}}'
    bind:change='handlerPhone'
    required
    input-class='van-info'
  />
   <van-field
    value="{{ message }}"
    label="留言"
    type="textarea"
    placeholder="留言信息"
    autosize
    border="{{ false }}"
    bind:change='handlerMessage'
    input-class='van-info'
  />
</van-cell-group>