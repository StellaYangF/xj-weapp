.xj-list {
  padding: 8rpx 16rpx;
}

.xj-list-item {
  margin-bottom: 1rem;
  background: #fff;
  border-radius: 16rpx;
}

.xj-list-item.inactive {
  opacity: 0.7;
}

.list-img{
  width: 100%;
  position: relative;
}

.list-img-view{
  width: 100%;
  height: 8rem;
  border-radius: 8px;
  box-shadow: 0 8rpx 40rpx 0 rgba(0,0,0,.2);
}

.list-content{
  width:100%;
  padding: .25rem .6rem;
  box-sizing:border-box;
}

.list-item-title {
  font-size: .875rem;
}

.list-item-subtitle {
  display: flex;
  justify-content: space-between;
  font-size: .875rem;
  padding-top: 16rpx;
}

.list-item-price {
  color: red;
  font-weight: bold;
}

.xj-item-contianer {
  position: relative;
}

.xj-delete-item {
  position: absolute;
  right: 40rpx;
  bottom: 10rpx;
  color: #f60;
  border: 2rpx solid #f60;
  background: #fff;
  padding: 2rpx 20rpx;
  font-size:24rpx;
  letter-spacing:4rpx;
  border-radius: 6rpx;
}
